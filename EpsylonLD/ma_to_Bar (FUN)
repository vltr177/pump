FUNCTION ma_to_Bar : REAL
VAR_INPUT
	I:REAL; 		//Входное значение силы тока
END_VAR
VAR
	I_MIN:REAL:=4; 		//Миниммальный уровень силы тока
	I_MAX:REAL:=20; 	//Максимальный уровень силы тока
	P_MIN:REAL:=0; 		//Минимальный уровень давления
	P_MAX:REAL:=100; 	//Максимальный уровень давления
END_VAR
---------------------------------------------------------
ma_to_Bar := (P_MAX-P_MIN)*((I-I_MIN)/(I_MAX-I_MIN))+P_MIN;	// масштабирование
